{
    "name": "rameshuv/my-awesome-wordpress-plugin",
    "description": "Bonus Hunt Guesser WordPress plugin",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.13",
        "wp-coding-standards/wpcs": "^3.2",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.1",
        "phpunit/phpunit": "^9.6"
    },
    "scripts": {
        "phpcs": "@php vendor/bin/phpcs --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 --standard=phpcs.xml",
        "phpcbf": "@php vendor/bin/phpcbf --standard=phpcs.xml"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
