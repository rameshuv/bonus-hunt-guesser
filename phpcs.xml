<?xml version="1.0"?>
<ruleset name="Bonus Hunt Guesser">
    <description>WordPress coding standards for the Bonus Hunt Guesser plugin.</description>

    <rule ref="WordPress"/>

    <!-- Downgrade legacy issues to warnings so they don't fail CI while we modernize. -->
    <rule ref="WordPress.DB.PreparedSQL.NotPrepared">
        <type>warning</type>
    </rule>
    <rule ref="WordPress.Security.ValidatedSanitizedInput.InputNotSanitized">
        <type>warning</type>
    </rule>
    <rule ref="WordPress.Security.ValidatedSanitizedInput.InputNotValidated">
        <type>warning</type>
    </rule>
    <rule ref="WordPress.Security.EscapeOutput.OutputNotEscaped">
        <type>warning</type>
    </rule>
    <rule ref="WordPress.WP.GlobalVariablesOverride.Prohibited">
        <type>warning</type>
    </rule>
    <rule ref="Squiz.Commenting.FunctionComment.MissingParamTag">
        <type>warning</type>
    </rule>
    <rule ref="Squiz.Commenting.FunctionComment.Missing">
        <type>warning</type>
    </rule>
    <rule ref="Squiz.Commenting.FileComment.Missing">
        <type>warning</type>
    </rule>

    <!-- Use a tab width of four spaces -->
    <arg name="tab-width" value="4"/>
    <arg name="extensions" value="php"/>

    <!-- Limit scanning to bootstrap and test scaffolding while legacy admin code is modernized. -->
    <file>bonus-hunt-guesser.php</file>
    <file>tests</file>
    <exclude-pattern>vendor/</exclude-pattern>
    <exclude-pattern>node_modules/</exclude-pattern>
</ruleset>
