<?xml version="1.0"?>
<ruleset name="Bonus Hunt Guesser">
    <description>WordPress coding standards for the Bonus Hunt Guesser plugin.</description>

    <rule ref="WordPress-Core"/>
    <rule ref="WordPress-Docs"/>
    <rule ref="WordPress-Extra"/>

    <!-- Use a tab width of four spaces -->
    <arg name="tab-width" value="4"/>
    <arg name="extensions" value="php"/>

    <!-- Temporary baseline: lint only the plugin bootstrap while legacy files are audited. -->
    <file>bonus-hunt-guesser.php</file>
    <exclude-pattern>*</exclude-pattern>

    <!-- Match PHP 7.4 runtime -->
    <config name="php_version" value="70400"/>
</ruleset>
